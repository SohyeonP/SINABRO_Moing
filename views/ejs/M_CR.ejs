        <div class="button">
          <input type="submit" name="submit" value="등록" id="btnSave" />
          <input type="button" name="cancle" value="취소" onclick="location.href='/hoststudy'">
        </div>

      </form>
    </div>
  </div>

  <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script> -->
  <script type="text/javascript" src="http://code.jquery.com/jquery-1.8.1.min.js"></script>
  <script>CKEDITOR.replace('study_info');</script>
  <script>
    $(document).ready(function() {
      $("#studyname").focus();
      function formcheck() {
        if($("#studyname").val() == ""){
          alert("스터디 방 이름을 입력해주세요!");
          $("#studyname").focus();
          return false;
        }
        return true;
      }
    })
  </script>

  <script>
    $(document).ready(function() {
      $("#btnSave").click(function() {
        var checkbox1 = [];
        $("input[name=check]:checked").each(function() {
          checkbox1.push($(this).val());
          var checkbox = checkbox1.join(' ');
          $("#checkbox").val(checkbox);
        });
        var info_data = CKEDITOR.instances.study_info.getData();
        $("#study").val(info_data);
        console.log(info_data);
      });
    })
  </script>

  <script>
    $(document).ready(function() {
      $('.dropzone').on("dragover",dragOver)
                    .on("dragleave", dragOver)
                    .on("drop",uploadFile);
      
      function dragOver(e){
        e.stopPropagation();
        e.preventDefault();
        if (e.type == "dragover") {
          $(e.target).css({
            "background-color":"gray",
            "outline-offset":"-20px"
          });
        }else {
          $(e.target).css({
              "background-color": "#b9b9b9",
              "outline-offset": "-10px"
          });
        }
      }
      
      function uploadFile(e){
        e.stopPropagation();
        e.preventDefault();
        dragOver(e);
        var file = e.originalEvent.dataTransfer.files;
        if(file[0].type.match(/image.*/)){
          $(e.target).css({
            "background-image":"url("+window.URL.createObjectURL(file[0]) + ")",
            "outline":"none",
            "background-size": "100% 100%"
          })
          var file_info = file[0].name;
          $("#title_img").val(file_info);
          $("#pp").hide();
        } else {
          alert("이미지만 업로드해주세요!");
        }
        
      }
    })
  </script>
</body>

